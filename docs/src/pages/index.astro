            const tabBtns = document.querySelectorAll(".tab-btn");
            const commandContents =
                document.querySelectorAll(".command-content");

            tabBtns.forEach((btn) => {
                btn.addEventListener("click", () => {
                    const tabName = btn.dataset.tab;

                    // æ›´æ–°æŒ‰é’®æ ·å¼
                    tabBtns.forEach((b) => {
                        b.classList.remove(
                            "bg-white",
